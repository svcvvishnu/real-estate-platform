generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Enums
enum UserRole {
  BUYER
  SELLER
  ADMIN
  VERIFICATION_TEAM
}

enum KYCStatus {
  PENDING
  APPROVED
  REJECTED
  NOT_SUBMITTED
}

enum PropertyType {
  HOUSE
  APARTMENT
  LAND
  COMMERCIAL
}

enum PropertyStatus {
  DRAFT
  PENDING
  APPROVED
  REJECTED
  SOLD
}

// Models
model User {
  id            String    @id @default(cuid())
  mobile        String    @unique
  password      String?   // Hashed password (or null if using pure OTP later)
  name          String?
  role          UserRole  @default(BUYER)
  kycStatus     KYCStatus @default(NOT_SUBMITTED)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  kycProfile    KYCProfile?
  properties    Property[]
  
  verifiedProperties Property[] @relation("VerifiedBy")
  verifiedKYCs       KYCProfile[] @relation("VerifiedBy")
  verifiedUpdates    PropertyUpdate[] @relation("VerifiedBy")
  
  shortlists         Shortlist[]
}

model KYCProfile {
  id              String    @id @default(cuid())
  userId          String    @unique
  user            User      @relation(fields: [userId], references: [id])
  
  fullName        String
  email           String
  governmentIdType String   // Aadhaar, PAN, etc.
  documentUrl     String    // URL to the storage bucket
  
  status          KYCStatus @default(PENDING)
  rejectionReason String?
  
  verifiedById    String?
  verifiedBy      User?     @relation("VerifiedBy", fields: [verifiedById], references: [id])
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model Property {
  id            String    @id @default(cuid())
  title         String
  description   String
  price         Float
  area          Float     // in sqft or acres
  
  type          PropertyType
  status        PropertyStatus @default(DRAFT)
  
  // Location
  address       String
  latitude      Float?
  longitude     Float?
  
  // Relations
  ownerId       String
  owner         User      @relation(fields: [ownerId], references: [id])
  images        PropertyImage[]
  updates       PropertyUpdate?

  rejectionReason String?
  
  verifiedById    String?
  verifiedBy      User?     @relation("VerifiedBy", fields: [verifiedById], references: [id])

  views           Int       @default(0)
  shortlists      Shortlist[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model PropertyUpdate {
  id            String    @id @default(cuid())
  propertyId    String    @unique
  property      Property  @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  title         String
  description   String
  price         Float
  area          Float
  type          PropertyType
  address       String

  status        KYCStatus @default(PENDING) // Reusing enum for simplicity: PENDING, APPROVED, REJECTED
  rejectionReason String?

  verifiedById    String?
  verifiedBy      User?     @relation("VerifiedBy", fields: [verifiedById], references: [id])

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model PropertyImage {
  id            String    @id @default(cuid())
  url           String
  
  propertyId    String
  property      Property  @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  createdAt     DateTime  @default(now())
}

model Shortlist {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  propertyId String
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())

  @@unique([userId, propertyId])
}
